<h1>Morning report</h1>

<form method="POST">
  <label>Sleep duration (h.)</label>
  <input type="number" name="sleepDuration" min="0" max="24" step="0.01" />
  <label>Sleep quality</label>
  <input type="range" name="sleepQuality" min="1" max="5" />
  <label>General mood</label>
  <input type="range" name="mood" min="1" max="5" />
  <label>Date</label>
  <input type="date" name="date" value="<%= (new Date()).toISOString().substr(0, 10) %>" />
  <input type="submit" value="Submit" />
</form>
