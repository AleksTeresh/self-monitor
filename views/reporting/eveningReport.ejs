<h1>Evening report</h1>

<form method="POST">
  <label>Sport/exercise duration (h.)</label>
  <input type="number" name="sportDuration" min="0" max="24" step="0.01" />
  <label>Studying duration (h.)</label>
  <input type="number" name="studyDuration" min="0" max="24" step="0.01" />
  <label>Eating regularity</label>
  <input type="range" name="eatingRegularity" min="1" max="5" />
  <label>Eating quality</label>
  <input type="range" name="eatingQuality" min="1" max="5" />
  <label>General mood</label>
  <input type="range" name="mood" min="1" max="5" />
  <label>Date</label>
  <input type="date" name="date" value="<%= (new Date()).toISOString().substr(0, 10) %>" />
  <input type="submit" value="Submit" />
</form>
